<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:attv="http://schemas.android.com/apk/res-auto"
    tools:context=".InitialSettings.InitialVisualizationSettings">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginTop="50dp"
        android:text="@string/visualization_settings"
        android:textColor="@color/black"
        android:textSize="29sp"
        android:textStyle="bold" />

    <com.dragankrstic.autotypetextview.AutoTypeTextView
        android:id="@+id/subTitle1"
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:layout_marginStart="30dp"
        android:layout_marginTop="100dp"
        android:layout_marginEnd="10dp"
        android:textSize="15sp"
        android:textColor="@color/defaultTextColor"
        attv:typingPrecision="1" />

    <TextView
        android:id="@+id/subTitleT1"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginTop="10dp"
        android:text="@string/visualization_name"
        android:textColor="@color/black"
        android:layout_below="@id/subTitle1"/>

    <EditText
        android:id="@+id/visualizationTitle"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/subTitleT1"
        android:layout_marginStart="30dp"
        android:layout_marginTop="10dp" />

    <TextView
        android:id="@+id/subTitleT2"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginTop="10dp"
        android:text="@string/visualization_image"
        android:textColor="@color/black"
        android:layout_below="@id/visualizationTitle"/>

    <ImageView
        android:id="@+id/visualizationImage"
        android:layout_height="wrap_content"
        android:layout_width="360dp"
        android:layout_marginStart="30dp"
        android:layout_marginTop="10dp"
        android:layout_below="@id/subTitleT2"
        android:src="@drawable/addimageicon"/>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/toNextScreenBtn"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/subTitle1"
        android:layout_alignParentEnd="true"
        android:layout_gravity="bottom|end"
        android:layout_marginTop="400dp"
        android:layout_marginEnd="27dp"
        android:src="@drawable/arrowright" />
</RelativeLayout>
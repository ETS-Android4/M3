<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ActivityCompleted">

    <TextView
        android:id="@+id/T1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="50dp"
        android:layout_marginTop="50dp"
        android:text="@string/congrats"
        android:textColor="@color/black"
        android:textSize="30sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/T1Desc1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/T1"
        android:layout_marginStart="50dp"
        android:layout_marginTop="5dp"
        android:paddingStart="0dp"
        android:paddingEnd="60dp"
        android:textSize="16sp"
        android:textColor="@color/black"
        android:text="@string/see_you_tomorrow_with_a_brand_new_day" />

    <TextView
        android:id="@+id/T1Desc2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/T1Desc1"
        android:layout_marginStart="50dp"
        android:layout_marginTop="5dp"
        android:paddingStart="0dp"
        android:paddingEnd="60dp"
        android:text="@string/activities_completed"/>


    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/animation_view"
        android:layout_width="wrap_content"
        android:layout_height="300dp"
        android:layout_below="@id/T1Desc2"
        android:layout_marginTop="90dp"
        app:lottie_autoPlay="true"
        app:lottie_fileName="achievedanimation.json"
        app:lottie_loop="true" />


    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/toNextScreenBtn"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/T1"
        android:layout_alignParentEnd="true"
        android:layout_gravity="bottom|end"
        android:layout_marginTop="500dp"
        android:layout_marginEnd="27dp"
        android:src="@drawable/arrowright"
        app:rippleColor="@color/white" />

</RelativeLayout>
